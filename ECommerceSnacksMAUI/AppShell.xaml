<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ECommerceSnacksMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ECommerceSnacksMAUI"
    xmlns:pages="clr-namespace:ECommerceSnacksMAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#a90409"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="FloralWhite">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>
        <Tab Title="Cart" Icon="cart.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ShoppingCartPage}" />
        </Tab>

        <Tab Title="Favourites" Icon="heart.png">
            <ShellContent ContentTemplate="{DataTemplate pages:FavouritesPage}" />
        </Tab>
        <Tab Title="Profile" Icon="profile.png">
            <ShellContent ContentTemplate="{DataTemplate pages:ProfilePage}" />
        </Tab>


    </TabBar>
    
    

</Shell>
